{
  "name": "@pevil/ng-tabs",
  "version": "1.0.0-beta",
  "description": "Angular2+ UI directives for constructing tab interfaces",
  "main": "ng-tabs.umd.js",
  "module":"ng-tabs.es5.js",
  "es2015": "ng-tabs.js",
  "types": "ng-tabs.d.ts",
  "scripts": {
    "pretest": "npm run build:test",
    "test": "karma start karma.conf.js",
    "posttest": "rimraf dist",
    "lint": "tslint lib/**/*.ts test/**/*.ts",
    "clean:build": "rimraf build",
    "clean:demo": "rimraf demo/dist",
    "clean": "rimraf dist build demo/dist coverage",
    "copy:metadata": "ts-node tools/utils/cp-metadata.ts",
    "transpile:es6": "ngc -p tsconfig-build.json",
    "transpile:es5": "ngc -p tsconfig-build.es5.json",
    "rollup:es6": "rollup -c tools/config/rollup/rollup.es6.config.js",
    "rollup:es5": "rollup -c tools/config/rollup/rollup.es5.config.js",
    "rollup:umd": "rollup -c tools/config/rollup/rollup.umd.config.js",
    "minify:umd": "uglifyjs dist/ng-tabs.umd.js -c -m -o dist/ng-tabs.umd.min.js",
    "build:es6": "npm run clean:build && npm run transpile:es6 && npm run rollup:es6 && npm run copy:metadata",
    "build:es5": "npm run clean:build && npm run transpile:es5 && npm run rollup:es5",
    "build:umd": "npm run rollup:umd && npm run minify:umd",
    "build:test": "rimraf dist coverage && tsc -p specs/tsconfig.json",
    "prebuild": "npm run clean && npm run lint",
    "build": "npm run build:es6 && npm run build:es5 && npm run build:umd",
    "postbuild": "ts-node tools/utils/post-build.ts",
    "prebuild.demo": "npm run clean:demo && ts-node tools/utils/demo-vendor.ts",
    "transpile.demo": "tsc -p demo/tsconfig.json",
    "rollup.demo": "rollup -f iife -c demo/rollup.config.js -o demo/dist/bundle.es6.js",
    "build.demo": "npm run transpile.demo && npm run rollup.demo",
    "postbuild.demo": "tsc --target es5 --allowJs demo/dist/bundle.es6.js --out demo/dist/bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pevil/ng-tabs.git"
  },
  "keywords": [
    "angular2",
    "angular",
    "tabs",
    "tab",
    "ng"
  ],
  "author": "Peter Laraia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Pevil/ng-tabs/issues"
  },
  "homepage": "https://github.com/Pevil/ng-tabs#readme",
  "devDependencies": {
    "@angular/common": "^4.2.6",
    "@angular/compiler": "^4.2.6",
    "@angular/compiler-cli": "^4.2.6",
    "@angular/core": "^4.2.6",
    "@angular/platform-browser": "^4.2.6",
    "@angular/platform-browser-dynamic": "^4.2.6",
    "@types/jasmine": "^2.5.53",
    "@types/node": "^8.0.10",
    "codelyzer": "^3.1.2",
    "core-js": "^2.4.1",
    "es6-shim": "^0.35.3",
    "fs": "0.0.1-security",
    "fs-extra": "^3.0.1",
    "husky": "^0.14.3",
    "jasmine": "^2.6.0",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-istanbul-threshold": "^1.2.2",
    "karma-jasmine": "^1.1.0",
    "karma-remap-istanbul": "^0.6.0",
    "karma-spec-reporter": "0.0.31",
    "recursive-copy": "^2.0.6",
    "reflect-metadata": "^0.1.10",
    "rimraf": "^2.6.1",
    "rollup": "^0.45.1",
    "rollup-plugin-alias": "^1.3.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve-angular": "^2.0.3",
    "rxjs": "^5.4.2",
    "systemjs": "^0.20.15",
    "ts-node": "^3.2.0",
    "tslib": "^1.7.1",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1",
    "uglify-js": "^3.0.24",
    "zone.js": "^0.8.12"
  }
}
